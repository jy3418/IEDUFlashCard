<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.flashcard.iedu.flashcard">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity" />
        <activity
            android:name=".SignupActivity"
            android:label="@string/title_activity_signup"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MenuActivity"
            android:label="@string/title_activity_menu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".samples.tab.CollectionDemoActivity"
            android:label="@string/demo_collection" />
        <activity
            android:name=".samples.flip.MainActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".samples.flip.CrossfadeActivity"
            android:label="@string/title_crossfade"
            android:parentActivityName=".samples.flip.MainActivity"
            android:uiOptions="splitActionBarWhenNarrow">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".samples.flip.MainActivity" />
        </activity>
        <activity
            android:name=".samples.flip.CardFlipDemoActivity"
            android:label="@string/title_card_flip"
            android:parentActivityName=".samples.flip.MainActivity"
            android:theme="@style/DarkTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".samples.flip.MainActivity" />
        </activity>
        <activity
            android:name=".samples.flip.ScreenSlideActivity"
            android:label="@string/title_screen_slide"
            android:parentActivityName=".samples.flip.MainActivity"
            android:uiOptions="splitActionBarWhenNarrow">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".samples.flip.MainActivity" />
        </activity>
        <activity
            android:name=".samples.flip.ZoomActivity"
            android:label="@string/title_zoom"
            android:parentActivityName=".samples.flip.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".samples.flip.MainActivity" />
        </activity>
        <activity
            android:name=".samples.flip.LayoutChangesActivity"
            android:label="@string/title_layout_changes"
            android:parentActivityName=".samples.flip.MainActivity">
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".samples.flip.MainActivity" />
        </activity>
        <activity android:name=".WordBookActivity" />
        <activity android:name=".WordBookListctivity" />
        <activity android:name=".WordActivity" />
        <activity android:name=".MatchActivity" />
        <activity android:name=".SettingActivity" />
        <activity android:name=".samples.setting.AppPreferences" />
        <activity android:name=".samples.fragmentList.MyFragmentListActivity"></activity>

        <!-- Example Setting -->
        <activity android:name=".samples.setting.SettingTestActivity"></activity>

        <!-- Example List -->
        <activity android:name=".samples.list.MyFragmentActivity"></activity>

        <!-- Example Fragment -->
        <activity android:name=".samples.fragment.MyFragmentTest"></activity>

        <!-- Example CardFlip -->
        <activity android:name=".samples.cardFlip.MyCardFlipActivity"></activity>

        <!-- Example Tab -->
        <activity
            android:name=".samples.tab.TabDemoActivity"
            android:label="@string/app_name">

        </activity>
        <activity android:name=".samples.serverConn.ServiceTestActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
